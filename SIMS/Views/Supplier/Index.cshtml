@model FC.Entities.FC_Supplier
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Supplier</h2>

<script type="text/javascript">
 
    function SaveDocument() {
        $('#SuccessMessage').hide(1000);
        $.ajax({
            url: 'SaveSupplier',
            type: 'POST',
            data: $('#SupplierForm').serialize(),
            success: function (data) {
                
                $('#ErrorMessage').show(1000);
                $("#DivRef").html(data);
                //alert('Supplier added successfully');
            }
        });
    }

</script>

<div class="form-group">
        <form id="SupplierForm">
            <div class="col-sm-6" style="padding-left:0px!important;">
                <div class="box form-horizontal">
                    <div class="box-inner">
                        <div class="jumbotron">
                            <div class="form-group">

                                <label>Name</label>
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control input-group-lg reg_name" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control input-group-lg reg_name" })
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                @Html.TextAreaFor(c => c.Address, new { @class = "form-control input-group-lg reg_name", style = "height:100px;" })

                            </div>


                            <div class="form-group">
                                <div class="col-sm-7" style="padding-left:0px!important;">
                                    <label>Contact Person 1</label>
                                    @Html.TextBoxFor(c => c.ContactPerson1, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                                <div class="col-sm-5" style="padding-right:0px!important;">
                                    <label>Contact No. 1</label>
                                    @Html.TextBoxFor(c => c.ContactNumber1, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                            </div><!--/form-group-->

                            <div class="form-group">
                                <div class="col-sm-7" style="padding-left:0px!important;">
                                    <label>Contact Person 2</label>
                                    @Html.TextBoxFor(c => c.ContactPerson2, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                                <div class="col-sm-5" style="padding-right:0px!important;">
                                    <label>Contact No. 2</label>
                                    @Html.TextBoxFor(c => c.ContactNumber2, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                            </div><!--/form-group-->

                            <div class="form-group">
                                <div class="col-sm-7" style="padding-left:0px!important;">
                                    <label>Bank Name1</label>
                                    @Html.TextBoxFor(c => c.BankName1, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                                <div class="col-sm-5" style="padding-right:0px!important;">
                                    <label>Bank Acc. No. 1</label>
                                    @Html.TextBoxFor(c => c.BankAccountNumber1, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                            </div><!--/form-group-->


                            <div class="form-group">
                                <div class="col-sm-7" style="padding-left:0px!important;">
                                    <label>Bank Name 2</label>
                                    @Html.TextBoxFor(c => c.BankName2, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                                <div class="col-sm-5" style="padding-right:0px!important;">
                                    <label>Bank Acc. No. 2</label>
                                    @Html.TextBoxFor(c => c.BankAccountNumber2, new { @class = "form-control input-group-lg reg_name" })
                                </div>
                            </div><!--/form-group-->
                            <div class="form-group">
                                <button class="btn btn-primary" type="button" onclick="SaveDocument()">Submit</button>
                                <button class="btn">Clear</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
<div id="DivRef" class="form-group">
    @{ 
        if (ViewBag.SupplierList != null)
        {
            var ListSupplier = (SIMS.Models.SupplierViewModels)ViewBag.SupplierList;

            Html.RenderPartial("_SupplierList", ListSupplier);
        }
    }

</div>
    </div>