@model FC.Entities.FC_Product

<script type="text/javascript">

    function SaveDocument() {
        $('#SuccessMessage').hide(1000);
        $.ajax({
            url: 'SaveProduct',
            type: 'POST',
            data: $('#ProductForm').serialize(),
            success: function (data) {

                $('#SuccessMessage').show(1000);
                $('html, body').animate({ scrollTop: 0 }, 800);
                ClearAll();
                $("#DivRef").html(data);
                //alert('Product added successfully');
            }
        });
    }

    function EditDocument(Productid) {
        $('#SuccessMessage').hide(1000);
        $.ajax({
            url: 'EditProduct',
            type: 'get',
            data: { ProductId: Productid },
            success: function (data) {
                $('html, body').animate({ scrollTop: 0 }, 800);
                $("#divProductForm").html(data);
                //alert('Product added successfully');
            }
        });
    }

    function ClearAll() {
        $('#ProductForm').closest('form').find("input[type=text], textarea").val("");

    }

</script>

<form id="ProductForm">
    <div class="col-sm-6" style="padding-left:0px!important;">
        <div class="box form-horizontal">
            <div class="box-inner">
                <div class="jumbotron">
                    <div class="form-group">

                        <label>Name</label>
                        @Html.TextBoxFor(c => c.Name, new { @class = "form-control input-group-lg reg_name" })
                        @Html.HiddenFor((c => c.Id))
                    </div>
                    <div class="form-group">
                        <label>Product Code</label>
                        @Html.TextBoxFor(c => c.ProductCode, new { @class = "form-control input-group-lg reg_name" })
                    </div>



                    <div class="form-group">
                        <div class="col-sm-7" style="padding-left:0px!important;">
                            <label>Retail Price</label>
                            @Html.TextBoxFor(c => c.RetailPrice, new { @class = "form-control input-group-lg reg_name" })
                        </div>
                        <div class="col-sm-5" style="padding-right:0px!important;">
                            <label>WholeSale Price</label>
                            @Html.TextBoxFor(c => c.WholeSalePrice, new { @class = "form-control input-group-lg reg_name" })
                        </div>
                    </div><!--/form-group-->

                    <div class="form-group">
                        <div class="col-sm-7" style="padding-left:0px!important;">
                            <label>Purchase Price</label>
                            @Html.TextBoxFor(c => c.PurchasePrice, new { @class = "form-control input-group-lg reg_name" })
                        </div>
                        <div class="col-sm-5" style="padding-right:0px!important;">
                            <label>Weight</label>
                            @Html.TextBoxFor(c => c.Weight, new { @class = "form-control input-group-lg reg_name" })
                        </div>
                    </div><!--/form-group-->

                    <div class="form-group">
                        <div class="col-sm-7" style="padding-left:0px!important;">
                            <label>Product Type </label>
                            @{
                                if (ViewBag.ProductTypes != null)
                                {
                                    Html.DropDownListFor(x => x.ProductTypeId, new SelectList(ViewBag.ProductTypes, "id", "Name"));
                                }

                            }

                        </div>
                        <div class="col-sm-5" style="padding-right:0px!important;">
                            <label>Manufacture</label>
                            @{
                                if (ViewBag.Manufactures != null)
                                {
                                    @Html.DropDownListFor(x => x.ManufactureId, new SelectList(ViewBag.Manufactures, "id", "Name"))
                                    ;
                                }

                            }
                        </div>
                    </div><!--/form-group-->

                    <div class="form-group">
                        <div class="col-sm-7" style="padding-left:0px!important;">
                            <label>Supplier </label>
                            @{
                                if (ViewBag.SupplierList != null)
                                {
                                    @Html.DropDownListFor(x => x.SupplierId, new SelectList(ViewBag.SupplierList, "id", "Name"));
                                }

                            }

                        </div>
                        <div class="col-sm-5" style="padding-right:0px!important;">

                        </div>
                    </div><!--/form-group-->

                    <div class="form-group">
                        <button class="btn btn-primary" type="button" onclick="SaveDocument()">Submit</button>
                        <button class="btn">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
