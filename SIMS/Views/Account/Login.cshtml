@model SIMSData.SIMS_User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="utf-8">
    <title>Student Information Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <link id="bs-css" href="@Url.Content("/Content/bootstrap-cerulean.min.css")" rel="stylesheet" type="text/css" />
    <!-- The styles -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .glyphicon-lock:before {
  content: "\e033";
}
    </style>

    <!-- jQuery -->
    <script src="~/bower_components/jquery/jquery.min.js"></script>
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- The fav icon -->
    <link rel="shortcut icon" href="img/favicon.ico">
</head>
<body>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="ch-container">
        <div class="row">
         
            <div class="row">
                <div class="col-md-12 center login-header">
                    <h2>Welcome to SIMS</h2>
                </div>
                <!--/span-->
            </div><!--/row-->
            <div class="row">
                <div class="well col-md-5 center login-box">
                    <div class="alert alert-info">
                        Please login with your Username and Password.
                    </div>
                    <form class="form-horizontal" action="Account/Login" method="post">
                        <fieldset>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                @*<input type="text" class="form-control" placeholder="Username">*@
                                @Html.TextBoxFor(c => c.UserName,new { @class="form-control"});
                                
                            </div>
                            <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                @*<input type="password" class="form-control" placeholder="Password">*@
                                @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend">
                                <label class="remember" for="remember">
                                <input type="checkbox" id="remember"> Remember me</label>
                            </div>
                            <div class="clearfix"></div>
                            <p class="center col-md-5">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </p>
                        </fieldset>
                    </form>
                </div>
                <!--/span-->
            </div><!--/row-->
        </div><!--/fluid-row-->
    </div><!--/.fluid-container-->
    <!-- external javascript -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
}

</body>
</html>
